server {
  listen 80;
  server_name zashas.xyz;
  server_name www.zashas.xyz;

  location / {
    proxy_pass_request_headers on;
    proxy_set_header        Host            $host;
    proxy_set_header        X-Real-IP       $remote_addr;
    proxy_set_header        X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_pass http://127.0.0.1:3000;
  }
}

server {
  listen 80;
  server_name zasha.dev;
  server_name www.zasha.dev;

  return 301 https://$host$request_uri;

  location / {
    proxy_set_header Host          $http_host
    proxy_set_header X-Real-IP     $remote_addr;
    proxy_set_header X-Forward-For $proxy_add_x_forwarded_for;
    proxy_pass       http://127.0.0.1:3000;
  }
}

server {
  listen 443 ssl; # managed by Certbot
  server_name zasha.dev;
  server_name www.zasha.dev;

  ssl_certificate /etc/letsencrypt/live/zasha.dev/fullchain.pem; # managed by Certbot
  ssl_certificate_key /etc/letsencrypt/live/zasha.dev/privkey.pem; # managed by Certbot
  include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
  ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

  location / {
    proxy_pass_request_headers on;
    proxy_set_header        Host            $host;
    proxy_set_header        X-Real-IP       $remote_addr;
    proxy_set_header        X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_pass http://127.0.0.1:3000;
  }
}
